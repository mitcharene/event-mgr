<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marene.eventmgr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_eventsactivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OptionsTabActivity"
            android:label="@string/title_activity_options_tab" >
        </activity>
        <activity
            android:name=".ChatTabActivity"
            android:label="@string/title_activity_chat_tab" >
        </activity>
        <activity
            android:name=".PhotosTabActivity"
            android:label="@string/title_activity_photos_tab" >
        </activity>
        <activity
            android:name=".InfoTabActivity"
            android:label="@string/title_activity_info_tab" >
        </activity>
    </application>

</manifest>
