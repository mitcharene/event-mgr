<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout android:id="@+id/event_num_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="1dip">
        
        <TextView android:id="@+id/tv_num_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:text="4"
            android:textSize="6pt"
            android:textColor="@color/White"
            android:background="@drawable/circle"/>
        
    </LinearLayout>
    <LinearLayout android:id="@+id/event_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/event_main_title_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/event_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End of Summer Dinner"
                android:textColor="@color/Black" 
                android:typeface="normal"
                android:textSize="8.5pt"
                android:textStyle="bold"/>
            
            <LinearLayout
                android:id="@+id/event_details_arrow_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cascal, Mountain View"
            android:textColor="@color/Black" 
            android:textSize="6pt"/>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
	        <TextView
	            android:id="@+id/event_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:text="Thur Aug 14, "
	            android:textColor="@color/Black"
	            android:textSize="4pt"/>
	
	        <TextView
	            android:id="@+id/event_time"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:text="6:00 PM"
	            android:textColor="@color/Gray"
	            android:textSize="4pt"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/event_attendees_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <GridView android:id="@+id/event_attendees_grid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:columnWidth="50dp"
			    android:numColumns="auto_fit"
			    android:stretchMode="none"
			    android:gravity="center">
                
            </GridView>
        </LinearLayout>
            
    </LinearLayout>
</LinearLayout>